  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Login işleminden sonra token'ı almak için",
          "if (pm.info.requestName === \"Login\") {",
          "    var jsonData;",
          "    try {",
          "        jsonData = pm.response.json();",
          "    } catch (e) {",
          "        console.error(\"Response parsing error:\", e);",
          "        pm.test(\"Response should be valid JSON\", function() {",
          "            pm.expect(false).to.be.true;",
          "        });",
          "        return;",
          "    }",
          "    ",
          "    if (pm.response.code === 200) {",
          "        pm.test(\"Login successful\", function() {",
          "            pm.expect(jsonData.data).to.have.property('token');",
          "            pm.expect(jsonData.success).to.be.true;",
          "        });",
          "        ",
          "        if (jsonData.data && jsonData.data.token) {",
          "            pm.environment.set(\"token\", jsonData.data.token);",
          "            console.log(\"Token saved to environment variables\");",
          "        }",
          "    } else {",
          "        pm.test(\"Login failed with proper error message\", function() {",
          "            pm.expect(jsonData.success).to.be.false;",
          "            pm.expect(jsonData.message).to.exist;",
          "            console.log(\"Login error: \" + jsonData.message);",
          "        });",
          "    }",
          "}",
          "",
          "// Meeting oluşturduktan sonra meeting ID'yi almak için",
          "if (pm.info.requestName === \"Create Meeting\" && pm.response.code === 200) {",
          "    var jsonData = pm.response.json();",
          "    if (jsonData.data && jsonData.data.id) {",
          "        pm.environment.set(\"meetingId\", jsonData.data.id);",
          "    }",
          "}"
        ]
      }
    }
